@{
    ViewBag.Title = "Kart";
    Layout = "~/Views/_ana.cshtml";
}
@using UniStaj
@using UniStaj.veri
@model UniStaj.Models.SmsDosyasiModel
    @{
    int dilKimlik = Model.gecerliDil();
}
<form id="formKayit" name="formKayit" autocomplete="off">

    <div class="@Ayar.tamGenislik">
        <div class="row">
            
            <div class=@Ayar.yariGenislik>
                <div class="@Ayar.formGrup">
                    <label class="@Ayar.labelBicim"> @Ayar.sozcuk("Dosya", dilKimlik)  </label>
                    <input id="files" name="files" type="file" size="1" class="@Ayar.dosyaYukleyiciBicim()" multiple onchange="dosyaYukle('files');" />
                </div>
            </div>
            @Html.HiddenFor(model => model.kartVerisi.i_dosyaKimlik)
            @Html.HiddenFor(model => model.kartVerisi.smsDosyasiKimlik)  
            @Html.HiddenFor(model => model.kartVerisi.varmi)
            <div class=@Ayar.yariGenislik>
                <div class="@Ayar.formGrup">
                    <label class="@Ayar.labelBicim"> @Ayar.sozcuk("Başlık", dilKimlik)  </label>
                    @Html.TextBoxFor(m => m.kartVerisi.baslik, new { @class = @Ayar.textBoxBicim(), maxlength = "250", placeholder = @Ayar.sozcuk("Başlık", dilKimlik) })
                </div>
            </div>
            <div class=@Ayar.yariGenislik>
                <div class="@Ayar.formGrup">
                    <label class="@Ayar.labelBicim"> @Ayar.sozcuk("Gönderim Türü", dilKimlik)  </label>
                    @Html.DropDownListFor(m => m.kartVerisi.i_smsGonderimTuruKimlik, ref_SmsGonderimTuru.doldur(), @Ayar.sozcuk("Lütfen Seçiniz", dilKimlik), new { @class = "form-control select2" })
                </div>
            </div>
            <div class=@Ayar.yariGenislik>
                <div class="@Ayar.formGrup">
                    <label class="@Ayar.labelBicim"> @Ayar.sozcuk("Metin", dilKimlik)  </label>
                    @Html.TextBoxFor(m => m.kartVerisi.metin, new { @class = @Ayar.textBoxBicim(), maxlength = "700", placeholder = @Ayar.sozcuk("Metin", dilKimlik) })
                </div>
            </div>
            @Html.HiddenFor(model => model.yenimi)
        </div>
        <hr />
        <button type="button" onclick="ekle(); return false;" id="btnKaydet" class="btn btn-success" data-bs-toggle="modal">
            @Ayar.sozcuk("Kaydet", dilKimlik)
        </button>
    </div>
</form>

<script>
    function ekle() {

        var valdata = $("#formKayit").serialize();
        console.table(valdata);
        $.ajax({
            url: "/SmsDosyasi/Kaydet/",
            type: "Post",
            data: valdata,
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success: function (response) {
                if (!response.success) {
                    Swal.fire(
                        '@Ayar.sozcuk("Hata", dilKimlik)',
                        response.message,
                        'error'
                    );
                    return false;
                }
                else {
                    Swal.fire(
                        '@Ayar.sozcuk("Başarılı", dilKimlik)',
                        response.message,
                        'success'
                    ).then(function () {
                        var deger = String(document.getElementById("yenimi").value);
                        if (deger == "True") {
                            window.location.reload();
                        }
                    })
                }
            }
        });
    }

    function dosyaYukle(inputId) {
        var input = document.getElementById(inputId);
        var files = input.files;
        var formData = new FormData();
        for (var i = 0; i != files.length; i++) {
            formData.append("files", files[i]);
        }
        $.ajax(
            {
                url: "/GeciciDosya/SadeceDosyaYukle",
                data: formData,
                processData: false,
                contentType: false,
                type: "POST",
                success: function (response) {
                    $('#kartVerisi_i_dosyaKimlik').val(response.message);
                }
            }
        );
    }
</script>

