        #datatable-buttons thead tr:first-child {
            font-weight: 200;
            background-color: #f4f6fb !important;
            color: #ff8100 !important;
            box-shadow: 0 5px 10px #e1e5ee;
            border-radius: 15px !important;
            height: 50px;
        }

        /* Tek satırları değiştirmek */
        table.dataTable tbody tr.odd {
            background-color: #f0f0f0; /* istediğin renk */
            font-weight: 500;
            border-radius: 8px !important;
        }

        /* Çift satırları değiştirmek */
        table.dataTable tbody tr.even {
            background-color: #ebf5fb; /* istediğin renk */
            font-weight: 500;
            border-radius: 8px !important;
        }
            /* Çift satırları değiştirmek */
            table.dataTable tbody tr.even:hover {
                background-color: #ebf5fb; /* istediğin renk */
                color: black !important;
                border-radius: 8px !important;
            }
        /* Çift satırları değiştirmek */
        table.dataTable tbody tr.odd:hover {
            color: black !important;
            border-radius: 8px !important;
        }

        .bg-blue {
            background-color: #EBF5FB;
            border-radius: 8px !important;
            font-weight: bold;
        }

        .fa-check,
        .fa-minus {
            color: blue
        }

        .bg-blue:hover {
            background-color: #3e64ff;
            color: #eee;
            cursor: pointer;
            border-radius: 8px !important;
        }

            .bg-blue:hover .fa-check,
            .bg-blue:hover .fa-minus {
                background-color: #3e64ff;
                color: #eee;
                border-radius: 8px !important;
            }


        .table thead th,
        .table td {
            border: none
        }

        .table tbody td:first-child {
            border-bottom-left-radius: 10px;
            border-top-left-radius: 10px
        }

        .table tbody td:last-child {
            border-bottom-right-radius: 10px;
        }


        /* Genel container */
        .satir-alert {
            border-left: 4px solid #ff8120; /* Sol taraftaki turuncu şerit */
        }

        /* Sol blok */
        .satir-sol {
            background: #ffc600; /* Sol blok arka plan */
            padding: 8px 12px;
            min-width: 250px; /* İstersen daraltabiliriz */
        }

        /* Sol başlık */
        .satir-baslik {
            font-weight: 600;
            font-size: 14px;
            font-family: Roboto, Arial, sans-serif;
        }

        /* Sağ blok */
        .satir-sag {
            background: #ffe898; /* Sağ blok arka plan */
            padding: 8px 12px;
            flex-grow: 1; /* Geri kalan alanı kaplasın */
            font-size: 14px;
            color: #333;
        }


