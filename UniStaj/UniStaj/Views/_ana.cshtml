    <style>

        input.form-control {
            background-color: #f9f9f9;
            color: black;
            border-radius: 0px !important;
        }

        .koyucan {
            color: dimgrey;
            font-weight: bold !important;
        }

        button.btn-rounded {
            border-radius: 3px !important;
            filter: drop-shadow(-2px 9px 3px #d9d9d9);
        }


        input.form-control:hover {
            background-color: #f9f9f9;
            color: #3e3e65;
            font-weight: bold !important;
            border-radius: 0px !important;
        }


        input.form-control:focus {
            background-color: #f9f9f9;
            color: #3e3e65;
            border-radius: 0px !important;
            font-weight: bold bold !important;
        }

        /* Select2 dropdown arka plan rengini değiştirme */
        .select2-dropdown {
            background-color: #f9f9f9 !important; /* Yeni arka plan rengi */
            border-color: #ccc !important; /* Çerçeve rengi */
        }

        /* Select2 seçim kutusunun arka plan rengini değiştirme */
        .select2-selection {
            background-color: #f9f9f9 !important; /* Yeni arka plan rengi */
            border-radius: 0px !important;
        }

        /* Select2'nin aktif durumundaki dropdown */
        .select2-dropdown.select2-dropdown--above {
            border-radius: 0px !important;
        }


        .golge {
            /* border-style: dashed;
                    border-color: #b1d6f5 !important;
                    border-radius: 5px !important;
                    border-width: 2px !important;


                           filter: drop-shadow(-2px 5px 2px #d9d9d9);
