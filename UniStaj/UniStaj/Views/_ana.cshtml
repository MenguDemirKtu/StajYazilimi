            border-style: dashed;
            border-color: #b1d6f5 !important;
            border-width: 2px !important;
            background-color: white;
        }

        .golge2 {
            background-color: #ffc600 !important;
            color: #333548 !important;
            border-radius: 3px !important;
        }

        .altGolge {
            border-bottom-style: dashed;
            border-bottom-color: #b1d6f5 !important;
            border-bottom-width: 2px !important;
        }

        .kalin {
        }

        .yuvarlak {
            border-radius: 6px !important;
            margin-top: 1px; /* başlıktan ayırmak için */
            border-radius: 6px; /* köşeleri yuvarla (opsiyonel) */
        }

        .alert-right {
            color: #977603; /* istediğin renk */
            background-color: #ffe898;
        }

        resim-container {
            width: 42px; /* Resmin boyutuna göre 5px dış çerçeve ekledik */
            height: 42px;
            border: 1px dashed black; /* 1px kesik çizgili çerçeve */
            border-radius: 50%; /* Yuvarlak görünüm */
            padding: 5px; /* Çerçeve ile resim arasında 5px boşluk */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .yuvarlak-resim {
            width: 32px; /* Resmin boyutu */
            height: 32px;
            border-radius: 50%; /* Yuvarlak resim */
        }



        /*        #datatable-buttons tbody tr:first-child {

            }

                #datatable-buttons tbody tr:first-child {
                }

                    #datatable-buttons tbody tr:first-child:hover {
                        background-color: #ff0101 !important;
