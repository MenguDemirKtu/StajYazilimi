@{
    Layout = null;
}
@using UniStaj
@model UniStaj.Models.SozlesmeModel

<!doctype html>
<html lang="tr">


<head>
    <meta charset="utf-8" />
    <title> @Genel.yazilimAyari.yazilimAdi </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Türkiye Atletizm Federasyonu Bilgi Yönetim Sistemi" name="description" />
    <link rel="shortcut icon" href="~/assets/images/favicon.png">
    <meta name="robots" content="noindex" />
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/js/pages/sweet-alerts.init.js"></script>
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@700&display=swap" rel="stylesheet">

    <style>

        .temel {
            background: url("../assets/images/bg-auth-overlay.png") !important;
            background-repeat: no-repeat;
            background-position: center;
            background-size: 100% 100% !important;
            font-family: 'PT Sans', sans-serif;
            font-size: 14px;
        }

        input.form-control {
            background-color: #f9f9f9;
            color: black;
            border-radius: 0px !important;
        }


        .temelYazi {
            font-family: 'PT Sans', sans-serif;
            font-size: 14px;
        }
    </style>
</head>



<body class="auth-body-bg temel">


    <form id="formKayit" name="formKayit" autocomplete="off">
        

        <div class="account-pages my-12 pt-sm-12">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-12 col-xl-12">
                        <div class="card overflow-hidden">
                            <div class="bg-primary-subtle">
                                <div class="auth-logo">
                                </div>
                                <div class="row">
                                    <div class="col-7">
                                        <div class="text-primary p-7">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body pt-0">
                                <br />


                                <div style="  display: flex;  justify-content: center;   ">

                                    <img src="~/images/serit.png" width="100%" height="80" />
                                </div>
                                <br />
                                <br />           <div class="auth-logo">
                                    <h5 class="text-primary">   
                                   @{
                                       if(Model.sozu != null){
                                        @Model.sozu.baslik
                                       }
                                        }
                                    </h5>
                                </div>

                                @Html.HiddenFor(p=>p.kullaniciKodu)
                      

                                @{
                                    if (Model.sozu != null)
                                    {
                                        @Html.Raw(Model.sozu.metin)
                                    }
                                }
                                 
                                <br />
                                <br />

                                <div class="p-2">

                                  
                                    <div class="mt-3 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" onclick="izinAl(); return false;" type="submit">Yukarıdaki Sözleşmeyi Onaylıyorum</button>
                                    </div>


                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>




    </form>
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/assets/js/pages/auth-2-carousel.init.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



    <script>
        function izinAl() {
            var valdata = $("#formKayit").serialize();
            console.table(valdata);
            $.ajax({
                url: "/Sozlesme/giris/",
                type: "Post",
                data: valdata,
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    if (!response.success) {
                        Swal.fire(
                            'Hata',
                            response.message,
                            'error'
                        );
                        return false;
                    }
                    else {

                        var deger = response.yonlensinmi;
                        if (deger == true) {
                            window.location.href = response.yonlenmeAdresi;
                        }
                        else {
                            Swal.fire(
                                'HATA',
                                response.message,
                                'error'
                            )
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
