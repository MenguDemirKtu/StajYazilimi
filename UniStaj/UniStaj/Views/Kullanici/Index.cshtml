@{ 
    Layout = "~/Views/_ana.cshtml";
}
@using UniStaj 
@using UniStaj.veri;
@model UniStaj.Models.KullaniciModel
    
    <form id="formKayit" name="formKayit" autocomplete="off">
        @{
        int dilKimlik = Model.gecerliDil();
            bool eklemeIzniVarmi = (bool)ViewBag.eklemeIznivar;
            bool silmeIzniVarmi = (bool)ViewBag.silmeIznivar;
            <i style="float: left; width: 50%; color: white; ">
                @if (eklemeIzniVarmi)
                {
                    <button type="button" class="btn btn-success btn-rounded waves-effect waves-light " onclick="kartAc(0);return false;">
                        <i class="mdi mdi-plus me-1"></i>
                     @Ikazlar.yeniKayitEkle("Kullanıcı", dilKimlik) 
                    </button>
                }
                else
                {
                    string y = "ekleme izniniz yok";
                    @y
                }
            </i>
            <i style="float: right; width: 50%; text-align: right; color: white; ">
                @if (silmeIzniVarmi)
                {
                    <button type="button" class="btn btn-danger btn-rounded waves-effect waves-light" onclick="sil(); return fals;">
                        <i class="mdi mdi-minus me-1"></i>
                       @Ayar.sozcuk("Seçilen Kayıtları Sil", dilKimlik)
                    </button>
                }
                else
                {
                    string y = "silme izniniz yok";
                    @y
                }
            </i>

             <div class="@Ayar.dokumGenisAramaBicim">
            <i class="@Ayar.dokumGenisAramaAlt"></i>
            Arama Paramaetreleri
            <hr />
            <br />
            <div class="row g-3"> 
                <div class="col-xxl-2 col-lg-4">
                    @Html.DropDownListFor(m => m.aramaParametresi.i_kullaniciTuruKimlik, ref_KullaniciTuru.doldur(), @Ayar.sozcuk("Kullanıcı Türü", dilKimlik), new { @class = "form-control select2 secimBicim" })
                </div>

                <div class="col-xxl-2 col-lg-4">
                    @Html.TextBoxFor(m => m.aramaParametresi.ogrenciNo, new { @class = @Ayar.textBoxBicim(), maxlength = "20", placeholder = @Ayar.sozcuk("Öğrenci No", dilKimlik) })
                </div>
                <div class="col-xxl-2 col-lg-4">
                    @Html.TextBoxFor(m => m.aramaParametresi.tcKimlikNo, new { @class = @Ayar.textBoxBicim(), maxlength = "40", placeholder = @Ayar.sozcuk("TC Kimlik No", dilKimlik) })
                </div>
                <div class="col-xxl-2 col-lg-4">
                    @Html.TextBoxFor(m => m.aramaParametresi.gercekAdi, new { @class = @Ayar.textBoxBicim(), maxlength = "400", placeholder = @Ayar.sozcuk("Ad Soyad", dilKimlik) })
                </div>
                <div class="col-xxl-2 col-lg-4"> 
                    <button type="button" class="btn btn-warning waves-effect btn-label waves-light" onclick="cek(); return false;"><i class="bx bx-zoom-in label-icon "></i> Ayrıntılı Ara </button>
                    </div> 
            </div>
        </div>


            <div style="float: left; width: 100%; height:30px;  "></div>
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th> </th>
                        <th> @Ayar.sozcuk( "Kullanıcı Adı", dilKimlik)</th> 
                        <th> @Ayar.sozcuk( "Kullanıcı Türü", dilKimlik)</th>
                        <th> @Ayar.sozcuk( "Gerçek Adı", dilKimlik)</th> 
                        <th> @Ayar.sozcuk( "Unvan", dilKimlik)</th> 
                        <th> @Ayar.sozcuk( "TC Kimlik No", dilKimlik)</th>
                        <th> @Ayar.sozcuk("Faal mi", dilKimlik)</th>
                    <th>
                        @Ayar.sozcuk("Güncelle", dilKimlik)
                    </th>
                        <th> @Ayar.sozcuk("Şifre Sıfırla", dilKimlik)</th>

                 
                    </tr>
                </thead>
                <tbody>
  @{   
                List<KullaniciAYRINTI> veri = Model.dokumVerisi;
                        foreach (var satir in veri)
                        {
                            <tr row_id="@satir._birincilAnahtar().ToString()">
                                <td>
                                    <input type="checkbox" class="checkBox"
                                           value="@satir._birincilAnahtar()" />
                                </td>
                                <td>@satir.kullaniciAdi</td> 
                                <td>@satir.kullaniciTuru</td>
                                <td>@satir.gercekAdi</td> 
                                <td>@satir.unvan</td> 
                                <td>@satir.tcKimlikNo</td> 
                                <td>@Genel.evetHayirIfadesi(satir.e_faalmi)</td>

                            <td>
                                <a class="btn btn-outline-secondary btn-sm edit" onclick="kartAc(@satir._birincilAnahtar()); return false;" style="color: #ffffff !important; background-color: #ffae00; border-color: #ffae00; " title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-outline-secondary btn-sm edit" href="@String.Format("/Kullanici/sifreSifirla?id={0}", satir.kodu)">
                                    Şifre Sıfırla
                                </a>

                               

                            </td>
                            </tr>
                        } }
                </tbody>
            </table> }
    </form>
    <script>
        function kartAc(id) {
window.location.href = "/Kullanici/Kart/"+id;
        }
        function sil() {
            var selectedIDs = new Array();
            $('input:checkbox.checkBox').each(function () {
                if ($(this).prop('checked')) {
                    selectedIDs.push($(this).val());
                }
            });
            if (selectedIDs.length == 0) {
                alert('@Ayar.sozcuk("Lütfen silmek istediğiniz kayıtları seçiniz",dilKimlik)')
                return;
            }
            var options = {};
            options.url = "/Kullanici/Sil?id=" + selectedIDs;
            options.type = "POST";
            options.data = JSON.stringify(selectedIDs);
            options.contentType = "application/json";
            options.dataType = "json";
            options.success = function (msg) {  
                Swal.fire({
                    position: "center-center", icon: "success",
                     title:  '@Ikazlar.basariylaSilindi(dilKimlik)', showConfirmButton: !1, timer: 1750,
                });
                setTimeout(function () {
                    window.location.reload(1);
                }, 1750);  //
            };
            options.error = function () {
                Swal.fire(
                    'Hata',
                    msg,
                    'error'
                ); 
            };
            $.ajax(options);         
            return false;
        }
    function cek() {
        var valdata = $("#formKayit").serialize();
        console.table(valdata);
        $.ajax({
 url: "/Kullanici/Cek/", 
            type: "Post",
            data: valdata,
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success: function (response) {
                if (!response.success) {
                    Swal.fire(
                        '@Ayar.sozcuk("Hata", dilKimlik)',
                        response.message,
                        'error'
                    );
                    return false;
                }
                else {
                    window.location.href = response.message;
                }
            }
        });
    }
    </script>

